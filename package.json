{
  "scripts": {
    "sass": "sass --watch --trace --no-quiet --stop-on-error -c public/css/src/styles.scss public/css/styles.css &",
    "prefix": "postcss --verbose public/css/*.css -u autoprefixer -r --no-map -m",
    "start": "npm run sass;npm run prefix;http-server -c-1"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "http-server": "*",
    "postcss-cli": "^6.1.2",
    "sass": "^1.19.0"
  }
}
